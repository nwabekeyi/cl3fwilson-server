generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contest {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  startDate    DateTime
  endDate      DateTime
  participants Participant[] // Relation handled via ContestId in Participant
  votes        Vote[]        // Relation handled via ContestId in Vote
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Participant {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  codeName      String     @unique // Unique identifier, e.g., CW001
  fullName      String
  email         String     @unique
  about         String
  photo         String?    // Stores Cloudinary image URL
  contestId     String     @db.ObjectId
  contest       Contest    @relation(fields: [contestId], references: [id])
  votes         Vote[]     // Votes for this participant
  evicted       Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Vote {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  contestId           String       @db.ObjectId
  participantId       String       @db.ObjectId
  voteCount           Int
  voterName           String
  paymentReference    String?      @unique
  contest             Contest      @relation(fields: [contestId], references: [id])
  participant         Participant  @relation(fields: [participantId], references: [id])
  createdAt           DateTime     @default(now())
}
